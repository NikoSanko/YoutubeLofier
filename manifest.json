{
  "manifest_version": 3,
  "name": "Youtube Lofier",
  "version": "1.0",
  "description": "Make Youtube Music Lofi",
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ]
}

